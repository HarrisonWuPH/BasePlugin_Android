<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_jump_to_mvvm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jump To MVVM Demo"
        ></Button>

    <Button
        android:id="@+id/button_jump_to_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jum To Second Activity"
        ></Button>

    <Button
        android:id="@+id/button_start_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始请求"></Button>

    <ImageView
        android:id="@+id/ivCoverImg"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        ></ImageView>
</LinearLayout>